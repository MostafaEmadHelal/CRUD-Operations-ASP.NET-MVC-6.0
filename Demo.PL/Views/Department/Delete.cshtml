@model DepartmentViewModel

<h1>Delete Department</h1>

<div class="row">
    <div class="col-6">
            <form asp-action="Delete" asp-controller="Department" method="post">
            <input type="hidden" asp-for="@Model.Id" name="id" />

            <p>Are you sure you want to delete this department?</p>
            <div class="form-group">
                <label asp-for="@Model.Code" class="col-form-label"></label>
                <input asp-for="@Model.Code" class="form-control" readonly />   
            </div>

            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label"></label>
                <input asp-for="@Model.Name" class="form-control" readonly />
            </div>

            <br />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>