@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thread>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Code)</th>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thread>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-success"asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning"asp-action="Update" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i> Update
                       </a>
                    </td>
                    <td>
                        <a class="btn btn-danger"asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>   
                </tr>
            }
        </tbody>
    </table>
}
else
    {
        <div class="alert alert-warning">
            <h3>No Departments Found !!</h3>
        </div>
    }

