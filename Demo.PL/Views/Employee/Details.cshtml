@using Demo.DAL.Entities

@{
    ViewData["Title"] = "Details";
}

<h1>Employee Details</h1>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Address</dt>
    <dd class="col-sm-10">@Model.Address</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Salary</dt>
    <dd class="col-sm-10">@Model.Salary</dd>

    <dt class="col-sm-2">Is Active</dt>
    <dd class="col-sm-10">@Model.IsActive</dd>

    <dt class="col-sm-2">Hire Date</dt>
    <dd class="col-sm-10">@Model.HireDate</dd>

    <dt class="col-sm-2">Department ID</dt>
    <dd class="col-sm-10">@Model.DepartmentId</dd>

    <div class="col-sm-10">
        <a asp-action="Update" asp-controller="Employee" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="fas fa-edit"></i> Update
        </a>
    </div>
</dl>

</dl>

<a asp-action="Index" class="btn btn-primary">Back to List</a>